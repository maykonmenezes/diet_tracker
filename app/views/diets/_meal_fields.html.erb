<div class='nested-fields'>
  <div class="md:flex mb-4">
    <div class="md:flex-1 md:pr-3">
      <label class="block uppercase tracking-wide text-charcoal-darker text-xs font-bold">Type</label>
      <%= f.text_field :meal_type, class: "w-full p-4 border-0" %>
    </div>
    <div class="md:flex-1 md:pr-3">
      <label class="block uppercase tracking-wide text-charcoal-darker text-xs font-bold">Time</label>
      <%= f.text_field :time_schedule, class: "w-full p-4 border-0", type: 'time'%>
    </div>
  </div>
  <div class="md:flex mb-4">
    <div class="md:flex-1 md:pr-3">
      <label class="block uppercase tracking-wide text-charcoal-darker text-xs font-bold">Description</label>
      <%= f.text_field :description, class: "w-full p-4 border-0"%>
      <span class="text-xs mb-4 font-thin">We lied, this isn't required.</span>
    </div>
  </div>
  <div class="md:flex mb-4">
    <%= link_to_remove_association "Remove Meal", f, class: 'bg-red-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full'%>
  </div>
</div>
